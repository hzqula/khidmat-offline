// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Mosque {
  id       String @id @default(uuid())
  name     String
  address  String
  district String
  city     String
  province String

  timezone  String
  latitude  Float?
  longitude Float?

  description String?
  logoUrl     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("mosques")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Announcement {
  id      String @id @default(uuid())
  content String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("announcements")
}

model DisplayImage {
  id        String @id @default(uuid())
  imageUrl  String
  imagePath String
  sortOrder Int    @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("display_images")
}

enum FinanceCategory {
  INFAQ_MASJID
  INFAQ_ANAK_YATIM
}

enum FinanceType {
  PEMASUKAN
  PENGELUARAN
}

model FinanceTransaction {
  id          String          @id @default(uuid())
  nominal     Int
  category    FinanceCategory
  type        FinanceType
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
  @@index([category, createdAt])
  @@index([type, createdAt])
  @@map("finance_transactions")
}

model PrayerSettings {
  id String @id @default(uuid())

  iqamahCountdownMinutes Int @default(10)

  adhanSoundPath  String @default("/sounds/adhan-default.mp3")
  iqamahSoundPath String @default("/sounds/iqamah-default.mp3")

  adhanAlarmEnabled  Boolean @default(true)
  iqamahAlarmEnabled Boolean @default(true)

  salatDurationMinutes Int @default(20)

  jumaahKhutbahMinutes Int @default(30)

  jumaahSalatDurationMinutes Int @default(15)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("prayer_settings")
}
