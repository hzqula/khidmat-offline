generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Mosque {
  id       String @id @default(uuid())
  name     String
  address  String
  city     String
  province String

  timezone  String
  latitude  Float?
  longitude Float?

  description String?
  logoUrl     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profiles Profile[]

  @@map("mosques")
}

model Profile {
  id    String @id @default(uuid())
  email String @unique
  name  String

  mosqueId String?
  mosque   Mosque? @relation(fields: [mosqueId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("profiles")
}
