// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Mosque {
  id       String @id @default(uuid())
  name     String
  address  String
  district String
  city     String
  province String

  timezone  String
  latitude  Float?
  longitude Float?

  description String?
  logoUrl     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("mosques")
}

model Profile {
  id    String @id @default(uuid())
  email String @unique
  name  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("profiles")
}

model Announcement {
  id      String @id @default(uuid())
  content String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("announcements")
}

model DisplayImage {
  id        String @id @default(uuid())
  imageUrl  String
  imagePath String
  sortOrder Int    @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("display_images")
}

enum FinanceCategory {
  INFAQ_MASJID
  INFAQ_ANAK_YATIM
}

enum FinanceType {
  PEMASUKAN
  PENGELUARAN
}

model FinanceTransaction {
  id          String          @id @default(uuid())
  nominal     Int
  category    FinanceCategory
  type        FinanceType
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
  @@index([category, createdAt])
  @@index([type, createdAt])
  @@map("finance_transactions")
}
